RewriteEngine On
RewriteBase /Clap/

# Rediriger la racine vers /Accueil
RewriteCond %{REQUEST_URI} ^/Clap/?$
RewriteRule ^$ Accueil [R=302,L]

# Ignorer les fichiers ou dossiers réels
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Réécriture propre vers index.php?page=...
RewriteRule ^(.+)$ index.php?page=$1 [QSA,L]